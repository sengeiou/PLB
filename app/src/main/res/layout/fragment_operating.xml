<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/operating_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/manager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_height"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/shop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="商品管理"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/evaluation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_height"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/evaluation"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="用户评价"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/financial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_height"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/financial"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="财务对账"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/data"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_height"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/data"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="经营数据"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_margin="10dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="赚钱法宝"
        android:textSize="@dimen/operating_title_textSize"
        android:padding="@dimen/operating_title_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/operating_activity_margin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/promote"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店推广"
                    android:textSize="@dimen/operating_activity_title_textSize"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提升排名，流量法宝"
                    android:textSize="@dimen/operating_activity_text_textSize"
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/operating_activity_image"
                android:layout_height="@dimen/operating_activity_image"
                android:background="@mipmap/horn"
                />
        </LinearLayout>
        <View
            android:layout_margin="10dp"
            android:background="@color/gray"
            android:layout_width="1dp"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:id="@+id/configuration"
            android:layout_margin="@dimen/operating_activity_margin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动配置"
                    android:textSize="@dimen/operating_activity_title_textSize"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拉新客，促转化"
                    android:textSize="@dimen/operating_activity_text_textSize"
                    android:textColor="@color/gray"/>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/operating_activity_image"
                android:layout_height="@dimen/operating_activity_image"
                android:background="@mipmap/balloon"                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp">
        <LinearLayout
            android:id="@+id/Tosign_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_width"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/enrollment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="活动报名"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stare"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_width"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/store"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="店铺"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/opr_refund"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_width"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/refund"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="极速退款"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/opr_invite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_width"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/invite"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="货物自取"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_margin="10dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务商城"
        android:textSize="@dimen/operating_title_textSize"
        android:padding="@dimen/operating_title_padding"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/operating_activity_last_layout_padding"
        android:paddingLeft="@dimen/operating_activity_last_layout_padding">
        <LinearLayout
            android:id="@+id/Replenish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_height"
                android:gravity="center"
                android:padding="@dimen/operating_activity_last_layout_image_padding"
                android:background="@mipmap/replenish"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="进货商"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="@dimen/operating_activity_last_layout_image_padding"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Courier_company"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_height"
                android:gravity="center"
                android:padding="@dimen/operating_activity_last_layout_image_padding"
                android:background="@mipmap/courier"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="快递公司"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="@dimen/operating_activity_last_layout_image_padding"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Logistics_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_image_width"
                android:layout_height="@dimen/operating_image_height"
                android:gravity="center"
                android:padding="@dimen/operating_activity_last_layout_image_padding"
                android:background="@mipmap/logistics"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="后勤部门"
                android:gravity="center"
                android:textSize="@dimen/operating_image_textSize"
                android:padding="@dimen/operating_activity_last_layout_image_padding"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>


</LinearLayout>