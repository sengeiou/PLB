<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/operating_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/manager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/shop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="商品管理"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/evaluation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/evaluation"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="用户评价"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/financial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/financial"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="财务对账"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/data"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/data"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="经营数据"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="赚钱法宝"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">
        <LinearLayout
            android:id="@+id/promote"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店推广"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提升排名，流量法宝"
                    android:textSize="16dp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@mipmap/horn"
                />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="60dp"/>
        <LinearLayout
            android:id="@+id/configuration"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动配置"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拉新客，促转化"
                    android:textSize="16dp"
                    android:textColor="@color/gray"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:background="@mipmap/balloon"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp">
        <LinearLayout
            android:id="@+id/Tosign_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/enrollment"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="活动报名"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/stare"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/store"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="店铺"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/opr_refund"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/refund"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="极速退款"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/opr_invite"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/invite"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="货物自取"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务商城"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:padding="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <LinearLayout
            android:id="@+id/Replenish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/replenish"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="进货商"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Courier_company"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/courier"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="快递公司"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Logistics_department"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/logistics"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="后勤部门"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>


</LinearLayout>