<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/operating_head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/manager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/shop"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="商品管理"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/evaluation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/evaluation"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="用户评价"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/financial"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/financial"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="财务对账"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/data"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/data"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="经营数据"
                android:gravity="center"
                android:textSize="16dp"
                android:padding="5dp"
                />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>