<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.plb.activity.Audit">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:maxLines="1"
            android:background="@color/colorLoginEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:hint="请输入真实姓名" />
        <EditText
            android:id="@+id/idcard"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@color/colorLoginEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:hint="请输入身份证号码" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sfz"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sfzs"/>

            <ImageView
                android:id="@+id/sfzbm"
                android:layout_marginLeft="10dp"

                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sfz2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yyzz"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/yyzz"/>
            <ImageView
                android:id="@+id/scsfz"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"

                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/scsfz"/>
        </LinearLayout>


        <Button
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_button_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="点击上传验证"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
