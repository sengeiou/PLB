<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.my_activity.YingYeStateActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_toolbar">

        <ImageView
            android:id="@+id/iv_yy_back"
            android:src="@drawable/back"
            android:layout_width="@dimen/activity_inform_back_size"
            android:layout_height="@dimen/activity_inform_back_size"
            />
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/activity_business_state_title_margin"
            android:text="营业状态"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yy_alter_time"
            android:text="修改营业时间"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_business_state_updata_time_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/activity_business_state_padding"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_yy_state"
            android:src="@drawable/state1"
            android:layout_width="@dimen/activity_business_state_image_size"
            android:layout_height="@dimen/activity_business_state_image_size" />

        <TextView
            android:id="@+id/tv_yy_state"
            android:text="待开始营业"
            android:textSize="@dimen/activity_business_state_size"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/business_statistics_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_yy_time"
        android:padding="@dimen/activity_business_state_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="营业时间："
            android:textSize="@dimen/activity_business_state_updata_time_size"
            android:textColor="#868484"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yy_time"
            android:textSize="@dimen/activity_business_state_updata_time_size"
            android:textColor="#868484"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/business_statistics_image"
        android:paddingRight="@dimen/business_statistics_image"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_yy_time_sm"
            android:text="当前店铺处于设置的营业时间外，且设置了不接受预订单"
            android:textSize="@dimen/activity_business_state_updata_time_size"
            android:textColor="#868484"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_yy_state"
            android:text="停止营业"
            android:textSize="@dimen/activity_business_state_botton_size"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="match_parent"
            android:background="@drawable/btn_bg_red"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yy_btn_sm"
            android:layout_marginTop="@dimen/activity_business_state_text_marginTop"
            android:text="当您希望长时间不再接收订单时，请点击上方按钮停止营业，开启后需要手动恢复"
            android:textSize="@dimen/activity_business_state_updata_time_size"
            android:textColor="#868484"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>