<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/product_list_item_paddingTop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/sort_img"
            android:layout_width="@dimen/product_list_item_ImageView"
            android:layout_height="@dimen/product_list_item_ImageView"
            android:src="@mipmap/sort1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/start_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="商品名称"
            android:textSize="@dimen/product_list_item_textSize"
            android:padding="@dimen/product_list_item_padding"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="销售额￥"
                android:textSize="@dimen/product_list_item_textSize_item"
                android:paddingLeft="@dimen/product_list_item_paddingLeft"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/shop_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1222"
                android:textSize="@dimen/product_list_item_textSize_item"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/product_list_item_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="赞"
                android:textSize="@dimen/product_list_item_textSize_items"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/shop_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="55"
                android:textSize="@dimen/product_list_item_textSize_items"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <TextView
            android:id="@+id/shop_evaluation"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="好评率100%"
            android:textSize="@dimen/product_list_item_textSize_items"
            android:padding="@dimen/product_list_item_padding"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="销量"
                android:textSize="@dimen/product_list_item_textSize_items"
                android:paddingLeft="@dimen/product_list_item_paddingLeft"
                android:textColor="@color/gray"
                />
            <TextView
                android:id="@+id/shop_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="222"
                android:textSize="@dimen/product_list_item_textSize_items"
                android:textColor="@color/gray"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/product_list_item_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="踩"
                android:textSize="@dimen/product_list_item_textSize_items"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/shop_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="10"
                android:textSize="@dimen/product_list_item_textSize_items"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
