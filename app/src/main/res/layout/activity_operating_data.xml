    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据统计"
        android:textSize="@dimen/operating_data_title"
        android:padding="@dimen/operating_data_title_padding"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/Business_statistics"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/operating_data_image"
                android:layout_height="@dimen/operating_data_image"
                android:background="@mipmap/data1"
                android:gravity="center"
                android:padding="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="营业统计"
                android:gravity="center"
                android:textSize="@dimen/operating_data_textSize"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Customer_analysis"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_data_image"
                android:layout_height="@dimen/operating_data_image"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/data2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="顾客分析"
                android:gravity="center"
                android:textSize="@dimen/operating_data_textSize"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <!--<LinearLayout
            android:id="@+id/Traffic_analysis"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_data_image"
                android:layout_height="@dimen/operating_data_image"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/data3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="流量分析"
                android:gravity="center"
                android:textSize="@dimen/operating_data_textSize"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/Product_analysis"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_data_image"
                android:layout_height="@dimen/operating_data_image"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/data4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="商品分析"
                android:gravity="center"
                android:textSize="@dimen/operating_data_textSize"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Merchants_experience"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/operating_data_image"
                android:layout_height="@dimen/operating_data_image"
                android:gravity="center"
                android:padding="5dp"
                android:background="@mipmap/data5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="商家体验"
                android:gravity="center"
                android:textSize="@dimen/operating_data_textSize"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="经营报告"
        android:textSize="@dimen/operating_data_title"
        android:padding="@dimen/operating_data_title_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/data"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/data"
            app:tabTextColor="@android:color/black"
            app:tabIndicatorHeight="3dp"
            app:tabTextAppearance="@style/TabStyle"
            />
        <!--android:background="#E0E0E0"-->
        <android.support.v4.view.ViewPager
            android:id="@+id/tab_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>

</LinearLayout>