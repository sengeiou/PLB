<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHard">
        <ImageView
            android:id="@+id/close2"
            android:layout_width="@dimen/activity_customer_analysis_Image"
            android:layout_height="@dimen/activity_customer_analysis_Image"
            android:background="@mipmap/quit"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="顾客分析"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/activity_customer_analysis_titleSize"
            android:padding="@dimen/activity_customer_analysis_titlePadding"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_customer_analysis_layout_height"
        android:orientation="horizontal"
        android:padding="@dimen/activity_customer_analysis_titlePadding">
        <TextView
            android:id="@+id/customer1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="今天"
            android:gravity="center"
            android:textColor="@color/data"
            android:background="@drawable/status_bg2"/>
        <TextView
            android:id="@+id/customer2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="近7天"
            android:gravity="center"
            android:background="@drawable/status_bg1"/>
        <TextView
            android:id="@+id/customer3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="近30天"
            android:gravity="center"
            android:textColor="@color/data"
            android:background="@drawable/status_bg2"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/customer_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_customer_analysis_titlePadding">

    </FrameLayout>

</LinearLayout>