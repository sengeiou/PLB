<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.plb.activity.RegIDCardActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:textColor="#FFF"
                android:text="身份验证"
                android:textSize="@dimen/login_toobar_textSize"
                android:textStyle="bold"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:maxLines="1"
            android:background="@color/colorLoginEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reg_edit_height"
            android:layout_margin="@dimen/reg_edit_margin"
            android:hint="请输入真实姓名" />
        <EditText
            android:id="@+id/password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@color/colorLoginEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reg_edit_height"
            android:layout_margin="@dimen/reg_edit_margin"
            android:hint="请输入身份证号码" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sfz"
                android:layout_width="@dimen/reg_image"
                android:layout_height="@dimen/reg_image"
                android:src="@drawable/sfzs"/>

            <ImageView
                android:id="@+id/sfzbm"
                android:layout_marginLeft="@dimen/reg_image_margin"

                android:layout_width="@dimen/reg_image"
                android:layout_height="@dimen/reg_image"
                android:src="@drawable/sfz2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yyzz"
                android:layout_width="@dimen/reg_image"
                android:layout_height="@dimen/reg_image"
                android:src="@drawable/yyzz"/>
            <ImageView
                android:id="@+id/scsfz"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/reg_image_margin"

                android:layout_width="@dimen/reg_image"
                android:layout_height="@dimen/reg_image"
                android:src="@drawable/scsfz"/>
        </LinearLayout>


        <Button
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/login_button_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="点击上传验证"
            android:textColor="#FFF"
            android:textSize="@dimen/reg_botton_textSize" />
    </LinearLayout>
</LinearLayout>
