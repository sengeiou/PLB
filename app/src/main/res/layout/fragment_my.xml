<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        app:title=""
        app:theme="@style/ToolbarTheme"
        android:id="@+id/toolbar"
        android:background="@color/colorHard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_toolbar">
        <TextView
            android:gravity="center"
            android:textColor="#FFF"
            android:text="用户中心"
            android:textSize="@dimen/toobar_title_text"
            android:textStyle="bold"
            android:background="@color/colorHard"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <!--头布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/colorHard"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <!--头像-->
        <LinearLayout
            android:layout_width="@dimen/fragment_my_tourImage_size"
            android:layout_height="@dimen/fragment_my_tourImage_size">
            <ImageView
                android:layout_margin="@dimen/fragment_my_tourImage_margin"
                android:id="@+id/iv_my_head"
                android:src="@mipmap/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!--店铺信息-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/fragment_my_info_margin"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_my_name"
                android:text="门店名称"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fragment_my_name_size"
                android:padding="@dimen/fragment_my_name_paddinng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_ylmd"
                android:text="点击预览门店 >"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/fragment_my_preview_textSize"
                android:padding="@dimen/fragment_my_name_paddinng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--二维码-->
        <!--<LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_my_ewm"
                android:src="@drawable/erweima"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>-->
    </LinearLayout>
    <View
        android:background="@color/colorOrderBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/operating_activity_line_height"/>
    <!--内容-->
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--营业状态-->
        <LinearLayout
            android:id="@+id/ll_my_state"
            android:padding="@dimen/fragment_my_state_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="营业状态"
                android:textSize="@dimen/fragment_my_state_size"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_state"
                android:text="待开始营业 >"
                android:textStyle="bold"
                android:textSize="@dimen/fragment_my_state_size"
                android:textColor="@color/colorMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/colorOrderBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/operating_activity_line_height"/>
        <LinearLayout
            android:padding="@dimen/fragment_my_setting_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/md_setting"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/fragment_my_setting_item_padding"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/mendiansetting"
                    android:layout_marginBottom="10dp"
                    android:layout_width="@dimen/fragment_my_setting_item_image_size"
                    android:layout_height="@dimen/fragment_my_setting_item_image_size" />
                <TextView
                    android:text="门店设置"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_my_ddsetting"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/mendiandindan"
                    android:layout_width="@dimen/fragment_my_setting_item_image_size"
                    android:layout_marginBottom="10dp"
                    android:layout_height="@dimen/fragment_my_setting_item_image_size" />
                <TextView
                    android:text="订单设置"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/fragment_my_setting_item_padding"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/mendiansetting"
                    android:layout_width="@dimen/fragment_my_setting_item_image_size"
                    android:layout_marginBottom="@dimen/fragment_my_setting_item_image_marginBottom"
                    android:layout_height="@dimen/fragment_my_setting_item_image_size" />
                <TextView
                    android:text="打印设置"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_my_lssetting"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/fragment_my_setting_item_padding"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/lingsheng"
                    android:layout_width="@dimen/fragment_my_setting_item_image_size"
                    android:layout_marginBottom="@dimen/fragment_my_setting_item_image_marginBottom"
                    android:layout_height="@dimen/fragment_my_setting_item_image_size" />
                <TextView
                    android:text="消息和铃声"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/colorOrderBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/operating_activity_line_height"/>
        <LinearLayout
            android:id="@+id/ll_my_yj"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="产品意见反馈"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fragment_my_state_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="@color/colorOrderBg"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/ll_my_zh"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="当前账户"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fragment_my_state_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_zh"
                android:text="hk651125"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/fragment_my_inform_textSize"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/colorOrderBg"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/ll_my_gx"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="检查更新"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fragment_my_state_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_my_gx"
                android:text="当前版本1.0.0"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/fragment_my_inform_textSize"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_marginBottom="40dp"
            android:gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_my_logout"
                android:text="退出登陆"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:background="#eae7e7"
                android:textColor="@android:color/holo_red_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>