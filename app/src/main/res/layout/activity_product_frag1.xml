<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_product_frag1_layout_height"
        android:gravity="center"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/product_spinner"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:entries="@array/day"
            >

        </Spinner>
        <TextView
            android:id="@+id/product_max"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="销售额最高"
            android:gravity="center"
            android:textSize="@dimen/activity_product_frag1_textSize"/>
        <View
            android:layout_width="@dimen/activity_product_frag1_View_width"
            android:layout_height="@dimen/activity_product_frag1_View_layheight"
            android:background="@color/colorBottomView"/>
        <TextView
            android:id="@+id/product_nummax"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="销售量最高"
            android:gravity="center"
            android:textSize="@dimen/activity_product_frag1_textSize"/>

        <TextView
            android:id="@+id/product_good"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="赞"
            android:gravity="center"
            android:textSize="@dimen/activity_product_frag1_textSize"/>
        <View
            android:layout_width="@dimen/activity_product_frag1_View_width"
            android:layout_height="@dimen/activity_product_frag1_View_layheight"
            android:background="@color/colorBottomView"/>
        <TextView
            android:id="@+id/product_bad"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="踩"
            android:gravity="center"
            android:textSize="@dimen/activity_product_frag1_textSize"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_product_frag1_View_height"
        android:background="@color/colorBottomView"/>
</LinearLayout>